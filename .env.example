# WAASP Configuration
# Copy this to .env and fill in your values

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=sqlite:///./waasp.db
# DATABASE_URL=postgresql://user:pass@localhost:5432/waasp

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Security
# Set this to require Bearer token for admin endpoints
# API_TOKEN=your-secret-token-here

# Default trust level for unknown senders
DEFAULT_TRUST_LEVEL=blocked
